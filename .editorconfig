# EditorConfig is awesome:http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

# Javascript files
[*.{js,json}]
indent_size = 2

[*.{bat,cmd,sln}]
end_of_line = crlf
